rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      let path = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(path) ? get(path).data : {};
    }
    
    function isAdmin() {
      let data = getUserData();
      return isAuthenticated() && (data.get('role', '') == 'admin' || 'admin' in data.get('roles', []));
    }
    
    function isAssigned(resourceData) {
      return request.auth.uid in resourceData.get(['description', 'attributes', 'analistas'], []) ||
             request.auth.token.get('email', '') in resourceData.get(['description', 'attributes', 'analistas'], []) ||
             resourceData.get(['description', 'attributes', 'analistas'], []).size() == 0;
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /collaborations/{collabId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      
      allow update: if isAuthenticated() && (
        isAdmin() || isAssigned(resource.data)
      );
      
      allow delete: if isAuthenticated() && (
        isAdmin() || isAssigned(resource.data)
      );
    }
  }
}
